# ----- Allgemein -----
NODE_ENV=production

# ----- Postgres (Staging) -----
POSTGRES_DB=wineacademy
POSTGRES_USER=wineacademy
POSTGRES_PASSWORD=change_me

# ----- Strapi -----
# In Staging Strapi-Secrets explizit setzen (nur Beispielwerte hier, in CI/Secrets ersetzen)
# APP_KEYS=
# API_TOKEN_SALT=
# ADMIN_JWT_SECRET=
# JWT_SECRET=
HOST=0.0.0.0
PORT=1337

# Strapi DB-Konfiguration
DATABASE_CLIENT=postgres
DATABASE_HOST=db_staging
DATABASE_PORT=5432
DATABASE_NAME=${POSTGRES_DB}
DATABASE_USERNAME=${POSTGRES_USER}
DATABASE_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_SSL=false

# Öffentliche URLs
PUBLIC_URL=https://wineacademy.plan-p.de/api

# ----- Next.js -----
NEXT_PUBLIC_API_URL=https://wineacademy.plan-p.de/api
# Für serverseitige Calls (SSR) innerhalb des Staging-Netzwerks
API_INTERNAL_URL=http://backend-staging:1337

# ----- PayPal -----
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your_webhook_id
PAYPAL_CURRENCY=EUR

# ----- SendGrid -----
SENDGRID_API_KEY=SG.xxxxx
EMAIL_FROM="Wine Academy Hamburg <noreply@wineacademy.de>"

# ----- LexOffice -----
LEXOFFICE_API_TOKEN=xxx
