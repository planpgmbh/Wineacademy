{
  "kind": "collectionType",
  "collectionName": "training_levels",
  "info": {
    "singularName": "training-level",
    "pluralName": "training-levels",
    "displayName": "Ausbildungslevel",
    "description": "Level innerhalb einer Ausbildung (z. B. WSET Level 1/2/3)"
  },
  "options": { "draftAndPublish": true },
  "pluginOptions": {},
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title", "required": true, "unique": true },
    "order": { "type": "integer" },
    "summary": { "type": "text" },
    "training": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::training.training",
      "inversedBy": "levels",
      "required": true
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "mappedBy": "trainingLevel"
    }
  }
}

