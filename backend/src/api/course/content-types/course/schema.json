{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Kurse",
    "description": "Kurse (z. B. Masterclasses, Weinkurse)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title", "required": true, "unique": true },
    "summary": { "type": "text" },
    "content": { "type": "richtext" },
    "level": { "type": "string" },
    "courseType": {
      "type": "enumeration",
      "enum": ["Masterclass", "Weinkurs", "Workshop"]
    },
    "image": { "type": "media", "multiple": false },
    "seo": { "type": "component", "repeatable": false, "component": "common.seo" },
    "training": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::training.training",
      "inversedBy": "courses"
    },
    "trainingLevel": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::training-level.training-level",
      "inversedBy": "courses"
    },
    "sessions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::session.session",
      "mappedBy": "course"
    }
  }
}
