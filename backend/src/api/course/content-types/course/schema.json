{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Kurs",
    "description": "Kurse innerhalb einer Seminar-Reihe"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title", "required": true, "unique": true },
    "summary": { "type": "text" },
    "content": { "type": "richtext" },
    "level": { "type": "string" },
    "image": { "type": "media", "multiple": false },
    "seminar": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::seminar.seminar",
      "inversedBy": "courses"
    },
    "sessions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::session.session",
      "mappedBy": "course"
    }
  }
}

