{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Events",
    "description": "Events (z. B. Weinabende)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title", "required": true, "unique": true },
    "summary": { "type": "text" },
    "content": { "type": "richtext" },
    "image": { "type": "media", "multiple": false },
    "seo": { "type": "component", "repeatable": false, "component": "common.seo" },
    "sessions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::session.session",
      "mappedBy": "event"
    }
  }
}
