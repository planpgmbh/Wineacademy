{
  "collectionName": "buchungen",
  "info": {
    "singularName": "buchung",
    "pluralName": "buchungen",
    "displayName": "Buchung",
    "description": "Buchung f√ºr eine Session/Termin"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    
    "rechnungstyp": {
      "type": "enumeration",
      "enum": ["privat", "firma"],
      "default": "privat"
    },
    "firmenname": { "type": "string" },
    "ustId": { "type": "string" },
    "rechnungsEmail": { "type": "email" },
    "strasse": { "type": "string" },
    "plz": { "type": "string" },
    "stadt": { "type": "string" },
    "land": { "type": "string" },
    
    "teilnehmer": {
      "type": "component",
      "repeatable": true,
      "component": "buchung.teilnehmer",
      "min": 1
    },
    "mitMwst": { "type": "boolean", "default": true },
    "steuerSatz": { "type": "decimal" },
    "preisBrutto": { "type": "decimal" },
    "preisNetto": { "type": "decimal" },
    "steuerBetrag": { "type": "decimal" },
    "gesamtpreisBrutto": { "type": "decimal" },
    "gesamtpreisNetto": { "type": "decimal" },
    "gesamtsteuerBetrag": { "type": "decimal" },
    "vorname": {
      "type": "string",
      "required": true
    },
    "nachname": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "telefon": { "type": "string" },
    "anzahl": {
      "type": "integer",
      "default": 1,
      "min": 1
    },
    "preisProPlatz": {
      "type": "decimal"
    },
    "gesamtpreis": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": ["offen", "bestaetigt", "storniert", "erstattet", "warteliste"],
      "default": "offen"
    },
    "zahlungsmethode": {
      "type": "enumeration",
      "enum": ["ueberweisung", "karte", "paypal", "sonstiges"]
    },
    "zahlungsreferenz": { "type": "string" },
    "gutscheincode": { "type": "string" },
    "agbAkzeptiert": {
      "type": "boolean",
      "default": false
    },
    "notizen": {
      "type": "text"
    },
    "termin": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::termin.termin",
      "inversedBy": "buchungen"
    },
    "kunde": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::kunde.kunde",
      "inversedBy": "buchungen"
    }
  }
}
